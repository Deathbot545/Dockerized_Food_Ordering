@{
    ViewData["Title"] = "Signin";
}

<style>
   
    .container {
        margin-top: 50px;
    }

    .btn-google {
        background-color: #4285F4;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-google img {
            width: 18px;
            height: 18px;
            margin-right: 10px;
        }

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.1);
    }

    .card-header {
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .toggle-button {
        cursor: pointer;
    }

    .center-button {
        display: flex;
        justify-content: center;
    }


    .hidden {
        display: none;
    }

 
</style>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="login-header text-center mb-4">
                <img src="/path/to/your/logo.png" alt="Your Logo" class="logo">
                <h2>Welcome to Our Service!</h2>
                <p>Sign up to get started.</p>
            </div>
            <!-- Display Model Errors -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }
            <div id="customerForm">
                <form id="signupFormCustomer" method="post" action="/Account/AddUser" class="needs-validation" novalidate>
                    <div class="form-group mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="text" class="form-control" id="username" name="username" placeholder="Enter Username" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter Password" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password" required>
                    </div>
                    <input type="hidden" name="roleName" value="Customer" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Sign Up</button>
                    </div>
                </form>
                <div class="social-login text-center mt-4">
                    <p class="mb-2">Or join using:</p>
                    <form asp-controller="Account" asp-action="ExternalRegisterOrLogin" method="get">
                        <input type="hidden" name="provider" value="Google" />
                        <input type="hidden" name="role" value="Customer" />
                        <button type="submit" class="btn btn-outline-danger">
                            <i class="fab fa-google"></i> Google
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

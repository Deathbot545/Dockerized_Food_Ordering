@using Restaurant_API.DTO
@model List<OutletInfoDTO>

<style>
    .card-img-top {
        width: 100%; /* Makes the image take the full width of the card */
        height: 200px; /* Fixed height for consistency */
        object-fit: cover; /* Ensures the image covers the area, might crop if aspect ratio is different */
    }
</style>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var outlet in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        @if (outlet.RestaurantImage != null)
                        {
                            <img class="bd-placeholder-img card-img-top"
                                 src="data:image/png;base64,@Convert.ToBase64String(outlet.RestaurantImage)"
                                 alt="Restaurant Image">
                        }
                        else
                        {
                            <!-- Display a placeholder or leave empty if no image -->
                            <svg class="bd-placeholder-img card-img-top" width="100%" height="200" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                                <title>Placeholder</title>
                                <rect width="100%" height="100%" fill="#55595c"></rect>
                                <text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text>
                            </svg>
                        }
                        <div class="card-body">
                            <p class="card-text">@outlet.CustomerFacingName</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                                </div>
                                <small class="text-muted">Open Hours: @outlet.OperatingHoursStart - @outlet.OperatingHoursEnd</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

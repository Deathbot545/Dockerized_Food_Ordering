@{
    ViewData["Title"] = "Home";
}
<script src="https://unpkg.com/html5-qrcode"></script>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restro - Online Restaurant Ordering</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        .navbar {
            margin-bottom: 20px;
        }

        .hero-section {
            background: url('https://via.placeholder.com/1500x500') no-repeat center center;
            background-size: cover;
            color: white;
            padding: 100px 0;
            text-align: center;
            box-shadow: inset 0 0 0 2000px rgba(0, 0, 0, 0.3);
        }

            .hero-section h1 {
                font-size: 3em;
                font-weight: 700;
            }

            .hero-section p {
                font-size: 1.25em;
                font-weight: 500;
            }

            .hero-section .btn {
                font-size: 1.25em;
                padding: 15px 30px;
                border-radius: 30px;
            }

        .features-section, .cta-section, .testimonials-section {
            padding: 50px 0;
        }

            .features-section .feature-item, .testimonials-section .testimonial-item {
                margin-bottom: 20px;
            }

        .feature-item .card {
            border: none;
            border-radius: 10px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .feature-item .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
            }

        .feature-item .card-body {
            padding: 30px;
        }

        .feature-item .card-title {
            font-size: 1.5em;
            margin-bottom: 20px;
            font-weight: 700;
        }

        .feature-item .card-text {
            font-size: 1.1em;
            color: #6c757d;
        }

        .cta-section {
            background-color: #007bff;
            color: white;
            text-align: center;
        }

            .cta-section h2 {
                font-size: 2em;
                font-weight: 700;
            }

            .cta-section p {
                font-size: 1.25em;
                font-weight: 500;
            }

        .testimonials-section .card {
            border: none;
            border-radius: 10px;
            background-color: #f8f9fa;
        }

        .testimonials-section .card-body {
            padding: 30px;
        }

        .testimonials-section .card-text {
            font-size: 1.1em;
            color: #343a40;
            margin-bottom: 20px;
        }

        .testimonials-section .card-title {
            font-size: 1.25em;
            font-weight: 500;
            color: #007bff;
        }

        .footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            text-align: center;
        }
    </style>
</head>
<body>
    <!-- QR Code Scanner Modal -->
    <div class="modal fade" id="qrScannerModal" tabindex="-1" aria-labelledby="qrScannerModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="qrScannerModalLabel">QR Code Scanner</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="qr-reader" style="width:100%"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container">
            <h1>Welcome to Restro</h1>
            <p>Your ultimate online restaurant ordering solution</p>
            <button id="orderButton" class="btn btn-lg btn-primary" type="button">
                Scan QR Code <i class="fas fa-qrcode ml-2"></i>
            </button>
        </div>
    </div>

    <!-- Features Section -->
    <div class="features-section container">
        <div class="row">
            <div class="col-md-4 feature-item">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5 class="card-title">Easy to Use</h5>
                        <p class="card-text">A user-friendly interface designed for both restaurant owners and customers.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 feature-item">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">Customizable Menus</h5>
                        <p class="card-text">Easily create and manage your restaurant's menu to suit your needs.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 feature-item">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">Quick Ordering</h5>
                        <p class="card-text">Customers can place orders quickly and efficiently through QR codes.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action Section -->
    <div class="cta-section">
        <div class="container">
            <h2>Ready to revolutionize your restaurant business?</h2>
            <p>Join Restro today and streamline your ordering process.</p>
            <a href="#" class="btn btn-lg btn-light">Sign Up Now</a>
        </div>
    </div>

    <!-- Testimonials Section -->
    <div class="testimonials-section container">
        <div class="row">
            <div class="col-md-4 testimonial-item">
                <div class="card">
                    <div class="card-body text-center">
                        <p class="card-text">"Restro has completely transformed how we handle orders. It's fast and reliable!"</p>
                        <h5 class="card-title">- John Doe, Restaurant Owner</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-4 testimonial-item">
                <div class="card">
                    <div class="card-body text-center">
                        <p class="card-text">"I love how easy it is to place orders with Restro. Highly recommended!"</p>
                        <h5 class="card-title">- Jane Smith, Customer</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-4 testimonial-item">
                <div class="card">
                    <div class="card-body text-center">
                        <p class="card-text">"The QR code system is a game-changer for our busy restaurant."</p>
                        <h5 class="card-title">- Mike Johnson, Restaurant Owner</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer">
        <p>&copy; 2024 Restro. All rights reserved.</p>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        document.getElementById('orderButton').addEventListener('click', function () {
            // Show the modal
            var myModal = new bootstrap.Modal(document.getElementById('qrScannerModal'));
            myModal.show();

            var config = { fps: 10, qrbox: { width: 250, height: 250 }, rememberLastUsedCamera: true };
            var html5QrcodeScanner = new Html5QrcodeScanner("qr-reader", config, false);
            html5QrcodeScanner.render(onScanSuccess, onScanError);

            // Attempt to modify the button styles after a delay to ensure they've been rendered
            setTimeout(() => {
                // Select the buttons created by the library
                let buttons = document.querySelectorAll('#qr-reader button');
                buttons.forEach(button => {
                    // Add Bootstrap button classes
                    button.classList.remove('button-class'); // Remove the library's default class if necessary
                    button.classList.add('btn', 'btn-primary'); // Add Bootstrap classes

                    // Specific class additions based on button functionality, if possible
                    if (button.textContent.includes('Start')) {
                        button.classList.add('btn-success'); // Example for a "Start" button
                    } else if (button.textContent.includes('Stop')) {
                        button.classList.add('btn-danger'); // Example for a "Stop" button
                    }
                });
            }, 1000); // Adjust the delay as needed to ensure the buttons are rendered
        });

        function onScanSuccess(decodedText, decodedResult) {
            // Handle the decoded text
            console.log(`Code matched = ${decodedText}`, decodedResult);
        }

        function onScanError(errorMessage) {
            // Handle scan error
            console.log(`Scan error: ${errorMessage}`);
        }
    </script>
</body>
</html>

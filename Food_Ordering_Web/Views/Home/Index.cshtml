@{
    ViewData["Title"] = "Home";
}
<style>
    body {
        font-family: 'Roboto', sans-serif;
        color: #333;
        background-color: #f8f5f1;
    }

    .hero-section {
        background: url('https://media.istockphoto.com/id/1409730005/photo/chef-cooking-at-a-restaurant-and-flaming-the-food.webp?s=2048x2048&w=is&k=20&c=o4tpp-hSHPlyGUxXMapznfAjbTeUueKpIkq2fayIOx4=') no-repeat center center;
        background-size: cover;
        color: #2e2d2b;
        padding: 150px 0;
        text-align: center;
        position: relative;
        box-shadow: inset 0 0 0 2000px rgba(0, 0, 0, 0.5);
    }

        .hero-section h1 {
            color: white;
            font-size: 3.5em;
            font-weight: 700;
            font-family: 'Playfair Display', serif;
        }

        .hero-section p {
            color: white;
            font-size: 1.5em;
            font-weight: 500;
            margin-bottom: 30px;
        }

        .hero-section .btn {
            font-size: 1.25em;
            padding: 15px 30px;
            border-radius: 30px;
            background-color: #000;
            color: #fff;
        }

            .hero-section .btn:hover {
                background-color: #444;
            }

    .features-section {
        padding: 50px 0;
    }

    .feature-item .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background-color: #fff;
    }

        .feature-item .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        }

    .cta-section {
        background-color: #000;
        color: #fff;
        text-align: center;
        padding: 50px 0;
    }

        .cta-section h2 {
            margin-bottom: 20px;
            font-family: 'Playfair Display', serif;
        }

        .cta-section .btn {
            background-color: #fff;
            color: #000;
        }

            .cta-section .btn:hover {
                background-color: #ccc;
            }

    .testimonials-section {
        padding: 50px 0;
    }

        .testimonials-section .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

    .footer {
        background-color: #2e2d2b;
        color: #f8f9fa;
        padding: 20px 0;
        text-align: center;
    }
</style>

    <!-- Hero Section -->

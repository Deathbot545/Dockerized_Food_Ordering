@model Food_Ordering_API.ViewModels.UserProfileModel

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container mt-4">
    <h4 class="mb-3">Edit Personal Details</h4>
    <form id="editProfileForm" method="post" action="@Url.Action("UpdateUserProfile", "Account")">
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" value="@Model.Email" required>
        </div>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" id="username" name="username" value="@Model.UserName" required>
        </div>
        <div class="mb-3">
            <label for="phoneNumber" class="form-label">Phone Number</label>
            <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" value="@Model.PhoneNumber">
        </div>
        <button type="submit" class="btn btn-primary">Update Profile</button>
    </form>
</div>

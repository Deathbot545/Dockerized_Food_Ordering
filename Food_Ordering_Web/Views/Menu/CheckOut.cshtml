    <div class="row">
        <!-- Order Summary Section -->
        <div class="col-md-6">
            <h5>Order summary</h5>
            <div id="order-summary-section">
                <!-- Items will be populated here -->
            </div>
            <a href="#" class="text-decoration-none">See all</a>
            <!-- Extras Section -->
